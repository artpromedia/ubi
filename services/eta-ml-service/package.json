{
  "name": "eta-ml-service",
  "version": "1.0.0",
  "description": "ML-powered ETA prediction service using XGBoost",
  "private": true,
  "scripts": {
    "install": "pip install -r requirements.txt",
    "dev": "uvicorn app.main:app --reload --port 4020",
    "start": "uvicorn app.main:app --host 0.0.0.0 --port 4020",
    "train": "python -m app.training.train_model",
    "test": "pytest tests/ -v",
    "lint": "ruff check app/ tests/",
    "format": "ruff format app/ tests/"
  },
  "keywords": [
    "eta",
    "machine-learning",
    "xgboost",
    "prediction"
  ],
  "engines": {
    "python": ">=3.11"
  }
}
