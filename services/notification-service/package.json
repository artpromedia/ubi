{
  "name": "@ubi/notification-service",
  "version": "0.0.1",
  "private": true,
  "description": "UBI Notification Service - Push, SMS, email, in-app notifications",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "docker:build": "docker build -t ubi-notification-service .",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.7.6",
    "@prisma/client": "^6.1.0",
    "@sendgrid/mail": "^8.1.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@ubi/database": "workspace:*",
    "@ubi/logger": "workspace:*",
    "@ubi/utils": "workspace:*",
    "firebase-admin": "^13.0.1",
    "hono": "^4.6.14",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.3",
    "tslib": "^2.8.1",
    "twilio": "^5.4.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@ubi/eslint-config": "workspace:*",
    "@ubi/typescript-config": "workspace:*",
    "eslint": "^8.57.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
