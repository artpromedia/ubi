{
  "name": "@ubi/user-service",
  "version": "0.0.1",
  "private": true,
  "description": "UBI User Service - Authentication, profiles, KYC",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docker:build": "docker build -t ubi-user-service .",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.18.4",
    "@prisma/client": "^6.1.0",
    "@ubi/database": "workspace:*",
    "@ubi/logger": "workspace:*",
    "@ubi/utils": "workspace:*",
    "bcrypt": "^5.1.1",
    "hono": "^4.6.14",
    "ioredis": "^5.4.1",
    "jose": "^5.9.6",
    "tslib": "^2.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.2",
    "@ubi/eslint-config": "workspace:*",
    "@ubi/typescript-config": "workspace:*",
    "eslint": "^8.57.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
