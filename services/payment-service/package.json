{
  "name": "@ubi/payment-service",
  "version": "0.0.1",
  "private": true,
  "description": "UBI Payment Service - Mobile money (M-Pesa, MTN MoMo), cards, wallets",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:load": "k6 run tests/load/k6-load-test.js",
    "test:load:spike": "k6 run -e SCENARIO=spike tests/load/k6-load-test.js",
    "test:load:stress": "k6 run -e SCENARIO=stress tests/load/k6-load-test.js",
    "docker:build": "docker build -t ubi-payment-service .",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.18.4",
    "@hono/zod-validator": "^0.7.6",
    "@prisma/client": "^6.1.0",
    "@ubi/database": "workspace:*",
    "@ubi/logger": "workspace:*",
    "@ubi/utils": "workspace:*",
    "hono": "^4.6.14",
    "ioredis": "^5.4.1",
    "nanoid": "^5.1.6",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@ubi/eslint-config": "workspace:*",
    "@ubi/typescript-config": "workspace:*",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^8.57.1",
    "tslib": "^2.8.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
