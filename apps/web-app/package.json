    "@types/react-dom": "^19.0.1",
    "@ubi/eslint-config": "workspace:*",
    "@ubi/testing": "workspace:^",
    "@ubi/typescript-config": "workspace:*",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
