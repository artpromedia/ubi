# UBI Monorepo Environment Configuration
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
LOG_LEVEL=debug

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
DATABASE_URL="postgresql://ubi:ubi_dev_password@localhost:5432/ubi_dev?schema=public"

# Direct connection for Prisma migrations
DIRECT_DATABASE_URL="postgresql://ubi:ubi_dev_password@localhost:5432/ubi_dev?schema=public"

# ============================================
# REDIS
# ============================================
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# AUTHENTICATION
# ============================================
# JWT secret for token signing (generate with: openssl rand -hex 32)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Session secret
SESSION_SECRET="your-session-secret-change-in-production"

# ============================================
# AWS SERVICES
# ============================================
AWS_REGION=af-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=ubi-dev-assets

# ============================================
# EXTERNAL SERVICES
# ============================================
# Twilio for SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SendGrid for Email
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@ubi.africa

# Firebase for Push Notifications
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ============================================
# PAYMENT PROVIDERS
# ============================================
# Paystack (Nigeria, Ghana, South Africa, Kenya)
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=

# Flutterwave
FLUTTERWAVE_SECRET_KEY=
FLUTTERWAVE_PUBLIC_KEY=

# M-Pesa (Kenya)
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_SHORTCODE=
MPESA_PASSKEY=

# MTN MoMo (Ghana, Rwanda)
MTN_MOMO_API_USER=
MTN_MOMO_API_KEY=
MTN_MOMO_SUBSCRIPTION_KEY=

# ============================================
# MAPS & LOCATION
# ============================================
GOOGLE_MAPS_API_KEY=
GOOGLE_MAPS_SERVER_KEY=

# ============================================
# ANALYTICS & MONITORING
# ============================================
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=ubi-africa
SENTRY_PROJECT=ubi-monorepo

# PostHog
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# ============================================
# FEATURE FLAGS
# ============================================
LAUNCHDARKLY_SDK_KEY=
LAUNCHDARKLY_CLIENT_ID=

# ============================================
# DEVELOPMENT
# ============================================
# Turborepo Remote Caching
TURBO_TOKEN=
TURBO_TEAM=

# Vercel (for preview deployments)
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# ============================================
# PORTS (local development)
# ============================================
# Web Applications
PORT_WEB_APP=3000
PORT_ADMIN_DASHBOARD=3001
PORT_MARKETING_SITE=3002
PORT_RESTAURANT_PORTAL=3003
PORT_FLEET_PORTAL=3004
PORT_MERCHANT_PORTAL=3005

# Backend Services
PORT_API_GATEWAY=4000
PORT_USER_SERVICE=4001
PORT_RIDE_SERVICE=4002
PORT_FOOD_SERVICE=4003
PORT_DELIVERY_SERVICE=4004
PORT_PAYMENT_SERVICE=4005
PORT_NOTIFICATION_SERVICE=4006
PORT_ANALYTICS_SERVICE=4007
PORT_CEERION_SERVICE=4008
