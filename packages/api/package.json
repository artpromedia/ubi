{
  "name": "@ubi/api-client",
  "version": "0.0.1",
  "private": true,
  "description": "UBI API Client - Type-safe API client for all UBI services",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.62.3",
    "ky": "^1.7.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@ubi/eslint-config": "workspace:*",
    "@ubi/typescript-config": "workspace:*",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "eslint": "^8.57.1",
    "react": "^19.0.0",
    "tslib": "^2.8.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
